{
  "name": "npm-typescript-starter",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "clean": "rimraf lib",
    "tsc": "tsc",
    "tsc:w": "tsc --w",
    "build": "npm run clean && npm run tsc",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublish": "npm run build",
    "preversion": "npm run test",
    "version": "npm run build"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": true
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caki0915/npm-typescript-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "SEE LICENSE IN <LICENCE>",
  "bugs": {
    "url": "https://github.com/caki0915/npm-typescript-starter/issues"
  },
  "homepage": "https://github.com/caki0915/npm-typescript-starter#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.14",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "react": "^16.3.2",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/react-test-renderer": "^16.0.1",
    "react-test-renderer": "^16.3.2"
  }
}
